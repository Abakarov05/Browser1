            <ListView.ItemTemplate>
                <DataTemplate                            >
                    <Grid x:ConnectionId='6'>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:ConnectionId='7' Grid.Column="0"                                          Padding="0, 0, 30, 0" TextWrapping="NoWrap" HorizontalAlignment="Left"/>
                      
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
